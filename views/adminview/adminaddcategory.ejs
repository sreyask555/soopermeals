<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>SooperMeals Admin</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Root CSS -->
  <link rel="stylesheet" href="/css/adminpanel.css">

</head>
<body>

<nav class="navbar navbar-expand-lg bg-body-tertiary shadow fixed-top">
  <div class="container d-flex justify-content-center">
      <a class="navbar-brand" href="#"><img class="img-fluid" src="/img/soopermealslogo.png" alt="SooperMeals" style="max-width: 80px;"></a>
  </div>
</nav>

<div class="container-fluid d-flex p-0">

    <!-- Menubar -->
    <div class="sidebar">
      <ul class="nav flex-column shadow-sm px-2" id="menubar">
        <li class="nav-item pb-1">
          <a class="nav-link" href="/admin/home">Dashboard</a>
        </li>

        <li class="nav-item dropdown pb-1">
          <a class="nav-link dropdown-toggle" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            User Management
          </a>
          <ul class="dropdown-menu" aria-labelledby="productDropdown">
            <li><a class="dropdown-item" href="/admin/userdetails">User Details<span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></a></li>
          </ul>
        </li>

        <li class="nav-item dropdown pb-1">
          <a class="nav-link dropdown-toggle" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Product Management
          </a>
          <ul class="dropdown-menu" aria-labelledby="productDropdown">
            <li><a class="dropdown-item" href="#">List Products</a></li>
            <li><a class="dropdown-item" href="#">Add Product</a></li>
            <li><a class="dropdown-item" href="/admin/productcategory">Product Categories</a></li>
            <li><a class="dropdown-item" href="#">Add Categories</a></li>
          </ul>
        </li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="container-fluid mt-5">
        <% if(locals.catinfofail){%>
            <div class="alert alert-danger text-center mt-2" role="alert"><%= catinfofail %></div>
            <%} %>
        <form class="col-md-6 p-5" action="/admin/addproductcategory" method="POST">
            <div class="mb-3">
              <label for="categoryInput" class="form-label">Enter a new food category</label>
              <input name="category" type="text" class="form-control" id="categoryInput" aria-describedby="categoryHelp" required>
              <div id="categoryHelp" class="form-text">Use generic names for category.</div>
            </div>
            <button type="submit" class="btn btn-primary">Add category</button>
          </form>

    </div>

</div>

<footer class="fixed-bottom bg-dark text-center text-white">
  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
    Designed with love 
    <a class="text-white" href="#" style="text-decoration: none;">&copy;Soopermeals</a>
  </div>
  <!-- Copyright -->
</footer>

<!-- Bootstrap JS  -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
