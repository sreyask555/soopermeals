<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SooperMeals</title>
    <!-- Bootstap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Root CSS -->
    <link rel="stylesheet" href="/css/userhome.css">
</head>
  <body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary shadow">
        <div class="container">
          <a class="navbar-brand fw-medium" href="#">SooperMeals</a>
            <div class="d-flex gap-3">
            <a href="/login"><button type="button" class="btn btn-dark px-5">Login</button></a>
            <a href="/signup"><button type="button" class="btn btn-dark px-5">Register</button></a>
          </div>
        </div>
    </nav>

    <div class="main-banner container-fluid">
        <div class="row">
            <div class="gradient-rect">
              <!-- <h1>Hungry <%#= locals.userdata.username %>? Order your SooperMeals now :)</h1> -->
              <h1>Hungry Hooman? Order your SooperMeals now :)</h1>
              <p class="fs-3">Find the best soopermeal near you</p>
            </div>
        </div>
      </div>

      <div class="container d-flex justify-content-center pt-3 pb-3">
        <h2>Top Cuisines in Trivandrum</h2>
      </div>

      <div class="container d-flex justify-content-start align-content-start gap-3 pb-5 mb-5 flex-wrap">
      <!-- <div class="container d-flex flex-column justify-content-center gap-3 pb-5 mb-5"> -->
        
        
        <!--  -->
        <% if(fooddata.length>0){%>
          <% fooddata.forEach((fdata, index)=>{%>
              <div class="card" style="overflow: hidden; width: 245px;">
                <img src="<%= fdata.foodimage[0] %>" class="card-img-top" style="object-fit: cover;height: 200px" alt="">
                <div class="card-body d-flex flex-column justify-content-center">
                  <h5 class="card-title"><%= fdata.foodname %></h5>
                  <h6 class="card-text"><%= fdata.foodcategory %></h6>
                  <p class="card-text">TVM Cloud Kitchen</p>
                  <!-- <p class="card-text"><%= fdata.foodprice %></p> -->
                  <a href="/login" class="btn btn-dark">Try SooperMeal</a>
                </div>
            </div>
            <%}) %>
          <%} %>
        <!--  -->
        

      </div>

      <footer class="fixed-bottom bg-dark text-center text-white">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
          Designed with love 
          <a class="text-white" href="#" style="text-decoration: none;">&copy;Soopermeals</a>
        </div>
        <!-- Copyright -->
      </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
